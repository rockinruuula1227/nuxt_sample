{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "test/*": [
        "./test/*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/node"
    ]
  },
  "types": [
    "@types/node",
    "@types/jest",
    "@nuxt/types",
    "@nuxt/vue-app",
    "@nuxtjs/moment",
    "@types/lodash",
  ],
  //"include": [
    //"src/**/*.ts",
    //"src/**/*.tsx",
    //"src/**/*.vue",
    //"tests/**/*.ts",
    //"tests/**/*.tsx"
  //],
  //"exclude": [
  //  "node_modules",
  //  ".nuxt",
  //  "dist"
  //]
}
